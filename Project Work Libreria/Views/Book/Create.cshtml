@using Project_Work_Libreria.Models.ModelForViews;
@model Book_ListBookCategories
@{
    
}

<div class="container login">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-6 m-auto mt-5 borders border rounded-5 ps-4 pe-4 pt-4 pb-3">
            <h1 class="mb-3 bianco">Aggiungi libro</h1>

            <form asp-controller="Book" asp-action="Create" method="post" class="mt-2 py-3">
            @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Book.Title" class="form-label bianco">Titolo</label>
                    <input asp-for="Book.Title" type="text" class="form-control" required>
                    <span asp-validation-for="Book.Title" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Book.Author" class="form-label bianco">Autore</label>
                    <input asp-for="Book.Author" type="text" class="form-control" required>
                    <span asp-validation-for="Book.Author" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <strong class="bianco">Categorie:</strong>
                    <select asp-for="Book.BookCategoryId" rows="10" class="d-block w-100">
                        <option value=""></option>
                        @foreach (BookCategory category in Model.BookCategories)
                        {
                            @if (Model.Book.BookCategoryId == category.Id)
                            {
                                <option value="@category.Id" selected>@category.Name</option>
                            }
                            else
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                </div> 

                <div class="mb-3">
                    <label asp-for="Book.ImgSource" class="form-label bianco">URL Immagine</label>
                    <input asp-for="Book.ImgSource" type="text" class="form-control" required>
                    <span asp-validation-for="Book.ImgSource" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Book.Description" class="form-label bianco">Descrizione</label>
                    <textarea asp-for="Book.Description" rows="10" class="form-control"></textarea>
                    <span asp-validation-for="Book.Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Book.Price" class="form-label bianco">Prezzo</label>
                    <input asp-for="Book.Price" type="text" class="form-control" required>
                    <span asp-validation-for="Book.Price" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Book.AvailableCopies" class="form-label bianco">Copie disponibili</label>
                    <input asp-for="Book.AvailableCopies" type="text" class="form-control" required>
                    <span asp-validation-for="Book.AvailableCopies" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-n">Salva</button>
            </form>
        </div>
    </div>
</div>

