@model List<Book_ListBookCategories>
@using Project_Work_Libreria.Models.ModelForViews;

<div class="main">
    <h1 class="text-center mb-0 bianco">La tua libreria</h1>
    

<div class="container mt-5 mb-5">
    <div class="row">
        
            @foreach(Book_ListBookCategories modelForView in Model){
            <div class="card shadow mx-2 mb-2 col-4">
                <img src="@modelForView.Book.ImgSource" class="card-img-top" alt="libri">
                <div class="card-body">
                    <h5 class="card-title">@modelForView.Book.Title</h5>
        
                </div>

                <ul class="list-group list-group-flush">
                    <p class="ps-1 pe-1 pt-1">
                      @modelForView.Book.Description
                    </p>
                </ul>
                        <div class="card-body">
                            <h3>@modelForView.Book.Category.Name</h3>

                        </div>
                <div class="card-body d-flex justify-content-evenly">
                  

                     <a href="@Url.Action("Update", "Book", new {id = modelForView.Book.Id})" class="btn btn-outline-warning mt-3 " role="button">Update</a>

                    <a href="@Url.Action("Details", "Book", new {id = modelForView.Book.Id})" class="btn btn-outline-warning mt-3 " role="button">Details</a>

                    

                        @* modificare pure ma mantenere il form!!!*@
                      


                            <!-- BOTTONE ELEIMINA CON MODALE -->
                            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <span class="material-icons-outlined">delete</span>
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Elimina questo libro</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">


                                            Vuoi eliminare il libro "<strong>@modelForView.Book.Title</strong>"?
                                        </div>
                                        <div class="modal-footer">
                                            <form asp-controller="Book" asp-action="Delete" asp-route-id="@modelForView.Book.Id" method="post" class="mt-3">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-outline-danger btn-sm mt-2">
                                                    Conferma
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <ul class="list-group list-group-flush">
                                <!-- BOTTONE PER L'ACUISTO CON MODALE -->
                                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#PurchaseModal">
                                    <span class="material-icons-outlined">
                                        shopping_cart
                                    </span>
                                </button>


                                <!-- MODALE ACQUISTO -->
                                <div class="modal fade" id="PurchaseModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Conferma acquisto</h1>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="input-group mb-3">
                                                    <input type="number" id="quantity-input" class="form-control" placeholder="Scegli la quantità" aria-label="Scegli la quantità" aria-describedby="basic-addon2">
                                              
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <form asp-controller="PurchaseData" asp-action="CreatePurchaseData" asp-route-id="@modelForView.Book.Id"  method="post" class="mt-3">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-outline-danger btn-sm mt-2">
                                                        Conferma
                                                    </button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </ul>
                </div>
            </div>
            }
        

            
     </div>
</div>

@section Scripts{
    axios.get("https://localhost:7093/api/PurchaseData/CreatePurchaseData")

    .then((result) =>{
    debugger;
    const purchaseData = result.data;
    purchaseData.Quantity =  document.getElementById("quantity-input").Value;
    }
    )
    .catch((error) => {
    console.error("Errore!");
    console.log(error);
    });
    }