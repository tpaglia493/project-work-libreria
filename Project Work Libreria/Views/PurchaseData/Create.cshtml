@using Project_Work_Libreria.Models.ModelForViews;
@model PurchaseData_Book


<div class="container login">
    <div class="row">
        <div class="col-lg-6 col-md-8 col-sm-6 m-auto mt-5">
            <h1 class="mb-3">Modifica libro</h1>

            <form asp-controller="PurchaseData" asp-action="Create" method="post" asp-route-id="@Model.Book.Id" class="mt-2 py-3">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="Book.Id" class="form-label">Titolo</label>
                    <input asp-for="Book.Id" type="text" class="form-control" required>
                    <span asp-validation-for="Book.Id" class="text-danger"></span>
                </div>

              

                <div class="mb-3">
                    <label asp-for="PurchaseData.Quantity" class="form-label">Quantità</label>
                    <input asp-for="PurchaseData.Quantity" type="number" class="form-control" required>
                    <span asp-validation-for="PurchaseData.Quantity" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-n">Salva</button>
            </form>
        </div>
    </div>
</div>