                        <input asp-for="PurchaseData.Quantity" type="number" class="form-control p-libri " style="width:270px" required>
                        <span asp-validation-for="PurchaseData.Quantity" class="text-danger"></span>
                    </div>

                        <h3>
                            Titolo:
                        </h3>

                        <h3>
                            Autore:
                        </h3>

                        <h3>
                            Prezzo:
                        </h3>


                    

                    <button type="submit" class="btn btn-n">Acquista</button>
                </form>
                </div>
            </div>

            <div class="col-6 mb-3 mt-3 p-img">
                <img src="~/img/addBookLoreta.png" class="pe-0" />
            </div>

          </div>
    </div>
</div>