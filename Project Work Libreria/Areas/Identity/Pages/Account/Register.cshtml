@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}
<div class="container mt-5 bianco">
    <h1 class="philosopher">@ViewData["Title"]</h1>


    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <h2 class="bianco">Crea un nuovo account.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating m-2">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating m-2">
                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.Password"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-floating m-2">
                    <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                    <label asp-for="Input.ConfirmPassword"></label>
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
                <button id="registerSubmit" type="submit" class="w-100 btn btn-lg-n bianco m-0">Register</button>

                <p>Hai già un account?<a asp-page="./Login">Accedi</a></p>
            </form>
        </div>
        <div class="col-md-8 col-md-offset-2">
            <section>
                <h3 class="bianco allura mb-3">"Così tanti libri, così poco tempo." - Frank Zappa.</h3>
                
                <img src="https://myadventuresininclusion.com/wp-content/uploads/2017/10/iStock-690358116-768x512.jpg" class="shadow-lg p-3 mb-5" alt="Torre Libri" height="400"></img>
                
            </section>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
