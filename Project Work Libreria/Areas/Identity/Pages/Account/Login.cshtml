@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="container mt-5 bianco">
    <h1 class="philosopher">@ViewData["Title"]</h1>
    <div class="row">
        <div class="col-md-4 p-3 justify-content-around">
            <section>
                <form id="account" method="post">
                    <h2>Accedi con le tue credenziali.</h2>
                    <hr />
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-floating m-2">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                        <label asp-for="Input.Email" class="form-label"></label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-floating m-2">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                        <label asp-for="Input.Password" class="form-label"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div>
                        <div class="checkbox">
                            <label asp-for="Input.RememberMe" class="form-label">
                                <input class="form-check-input" asp-for="Input.RememberMe" />
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>
                    </div>
                    <div>
                        <button id="login-submit" type="submit" class="w-100 btn btn-lg-n bianco m-0">Log in</button>
                    </div>
                    <div class="col mt-2">
                        <p>
                            Hai dimenticato la password?
                            <a id="forgot-password" asp-page="./ForgotPassword">Recupera</a>
                        </p>
                        <p>
                            Non hai un account?
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Registrati</a>
                        </p>
                        <p>
                            <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Rinvia email di conferma</a>
                        </p>
                    </div>
                </form>
            </section>
        </div>

        <div class="col-md-8 col-md-offset-2">
            <section>
                <h3 class="allura mb-3 text-black">Leggere è dare libertà alla mente e capire che non è mai stata priggioniera.</h3>
                
                <img src="https://goodereader.com/blog/wp-content/uploads/images/girl-reading-book-1024x599.jpg" class="shadow-lg p-3 mb-5" alt="Banbina con libro" height="400"></img>


            </section>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
